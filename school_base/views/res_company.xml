<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="view_company_form_inherit_fields" model="ir.ui.view">
        <field name="name">school.base.view.company.form.inherit.fields</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page string="School information">
                    <group>
                        <field name="district_code_id"/>
                        <field name="school_year_id"/>
                    </group>
                </page>
            </notebook>

        </field>
    </record>

</odoo>
