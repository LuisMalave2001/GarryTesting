<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_school_year_tree_inherit_admission" model="ir.ui.view">
        <field name="name">school.base.school.year.view.inherit.admission</field>
        <field name="model">school_base.school_year</field>
        <field name="inherit_id" ref="school_base.view_school_year_tree"/>
        <field name="arch" type="xml">
            <field name="school_code_id" position="after">
                <field name="active_admissions"/>
            </field>
        </field>
    </record>
    
    <record id="view_grade_level_tree_inherit_admission" model="ir.ui.view">
        <field name="name">school.base.grade.level.view.inherit.admission</field>
        <field name="model">school_base.grade_level</field>
        <field name="inherit_id" ref="school_base.view_grade_level_tree"/>
        <field name="arch" type="xml">
            <field name="school_code_id" position="after">
                <field name="active_admissions"/>
            </field>
        </field>
    </record>
</odoo>