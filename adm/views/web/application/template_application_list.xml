<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="adm.template_admission_application_list">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="pt32 pb32">
                    <div class="container">
                        <div class="row s_nb_column_fixed">
                            <div class="col-lg-12 s_title pt16 pb16" style="text-align: center;">
                                <h1 class="s_title_default">
                                    <span style="font-size: 62px;">Applications List</span>
                                </h1>
                                <t t-foreach="application_ids" t-as="application_id">
                                    <div class="list-group">
                                        <a t-attf-href="/admission/applications/#{application_id.id}"
                                            class="list-group-item list-group-item-action">
                                            <t t-esc="application_id.name"/>
                                        </a>
                                    </div>
                                </t>
                                <h3 class="text-center mt-4">
                                    CREATE NEW APPLICATION:
                                    <a class="btn btn-primary" href="/admission/applications/create">
                                        New Application
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>