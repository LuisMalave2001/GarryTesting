<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="InvoicePaymentReceiptScreenWidget">
         <div class='surcharge-receipt-screen screen'>
            <div class='screen-content'>
                <div class='top-content'>
                    <h1>Change: <span class="change-value"><t t-esc="widget.format_currency(0)"/></span></h1>
                    <span class='button next'>
                        Next Order
                        <i class='fa fa-angle-double-right'></i>
                    </span>
                </div>
                <div class="full-content">
                    <button class="button print"><i class='fa fa-print'></i> Print Receipt</button>
                    <div class="pos-payment-receipt-container touch-scrollable scrollable-y" ref="pos_payment_receipt_container">
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>